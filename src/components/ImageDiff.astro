---
interface Props {
  title: string;
  img1: string;
  img2: string;
  alt1?: string;
  alt2?: string;
}

const { title, img1, img2, alt1 = "Imagen 1", alt2 = "Imagen 2" } = Astro.props;
---

<details class="collapse collapse-arrow bg-base-100 border-base-300 border">
  <summary class="collapse-title font-semibold">{title}</summary>
  <div class="collapse-content text-sm">
    <figure class="diff aspect-16/9" tabindex="0">
      <div class="diff-item-1" role="img" tabindex="0">
        <img alt={alt1} src={img1} loading="lazy" />
      </div>
      <div class="diff-item-2" role="img">
        <img alt={alt2} src={img2} loading="lazy" />
      </div>
      <div class="diff-resizer"></div>
    </figure>
  </div>
</details>
